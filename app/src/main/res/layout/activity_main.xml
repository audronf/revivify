<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/container_color"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp">

            <TextView
                android:id="@+id/currentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratlight"
                android:textColor="@color/text_color"
                android:textSize="32sp"
                tools:text="Viernes, 05 de enero de 2024" />

            <TextClock
                android:id="@+id/textClock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratbold"
                android:textColor="@color/text_color"
                android:textSize="@dimen/clock_text_size"
                android:timeZone="America/Buenos_Aires"
                tools:text="12:03 pm" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <AnalogClock
                    android:id="@+id/analogClock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:timeZone="America/Buenos_Aires" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- TODO: Transform this into a RecyclerView -->
                    <com.audronf.revivify.ui.components.ExtraTimezone
                        android:id="@+id/parisTimezone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.audronf.revivify.ui.components.ExtraTimezone
                        android:id="@+id/losAngelesTimezone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.audronf.revivify.ui.components.ExtraTimezone
                        android:id="@+id/tokyoTimezone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
